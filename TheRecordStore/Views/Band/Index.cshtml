
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm("Create", "Band"))
{

    <p>
        @Html.TextBox("BandName", null, new { @class = "form-control", placeholder = "Band Name"})
    </p>
    
    <p>
        @Html.TextBox("Genre", null, new { @class = "form-control", placeholder = "Genre" })
    </p>
    <p>
        @Html.TextBox("ReleaseDate", null, new { @class = "form-control", placeholder = "Release Date" })
    </p>
    <p>
        <input type="submit" class="btn btn-default" value="Create Band" />
    </p>

}

@foreach (var band in ViewBag.AllBands)
{
    <div class="row">
        <div class="col-md-3">
            @band.BandName
        </div>
        <div class="col-md-3">
            @band.Genre
        </div>
        <div class="col-md-3">
            @band.ReleaseDate
        </div>
        <div class="col-md-3">
            @band.Created
        </div>
    </div>
}

