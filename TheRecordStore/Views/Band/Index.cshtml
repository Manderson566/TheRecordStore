@model IEnumerable<TheRecordStore.Models.Band>
    @{
        ViewBag.Title = "Index";
    }

    <h2>Index</h2>
    @using (Html.BeginForm("Create", "Band"))
    {

        <p>
            @Html.TextBox("BandName", null, new { @class = "form-control", placeholder = "Band Name" })
        </p>

        <p>
            @Html.TextBox("Genre", null, new { @class = "form-control", placeholder = "Genre" })
        </p>

        <p>
            @Html.TextBox("ReleaseDate", null, new { @class = "form-control", placeholder = "Release Date" })
        </p>

        <p>
            @Html.TextBox("Details", null, new { @class = "form-control", placeholder = "Band Details" })
        </p>

        <p>
            <input type="submit" class="btn btn-default" value="Create Band" />
        </p>

    }
    <table class="table">
        <tr>
            <th>
                <h3>Band</h3>
            </th>
            <th>
                <h3>Genre</h3>
            </th>
            <th>
                <h3>Release Date</h3>
            </th>
            <th>
                <h3>Instance Created</h3>
            </th>
        </tr>
        @foreach (var band in ViewBag.AllBands)
        {
            <tr>
                <td>
                    @band.BandName
                </td>
                <td>
                    @band.Genre
                </td>
                <td>
                    @band.ReleaseDate
                </td>
                <td>
                    @band.Created
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = band.Id }) 
                    @Html.ActionLink("Details", "Details", new { id = band.Id }) 
                    @Html.ActionLink("Delete", "Delete", new { id = band.Id })
                </td>

            </tr>
        }
    </table>

