@model TheRecordStore.Models.Band
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    <h4>Band</h4>
    <table class="table">
        <tr>
            <th>
                <h3>Band</h3>
            </th>
            <th>
                <h3>Genre</h3>
            </th>
            <th>
                <h3>Band Debut</h3>
            </th>
            <th>
                <h3>Band Details</h3>
            </th>
        </tr>
        <tr>
            <td>
                @Html.EditorFor(model => model.BandName, new { @class = "form-control" })              
            </td>
            <td>
                @Html.EditorFor(model => model.Genre, new { @class = "form-control" } ) 
            </td>
            <td>
                @Html.EditorFor(model => model.ReleaseDate, new { @class = "form-control" } )               
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
                @Html.ActionLink("Back to List", "Index")
            </td>
            <td>
                <input type="submit" value="Save" class="btn btn-default" />
            </td>

        </tr>
    </table>
}






